<p id="notice"><%= notice %></p>

<h1>Okrs</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Completion status</th>
      <th>Goal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @okrs.each do |okr| %>
      <tr>
        <td><%= okr.description %></td>
        <td><%= okr.completion_status %></td>
        <td><%= okr.goal_id %></td>
        <td><%= link_to 'Show', okr %></td>
        <td><%= link_to 'Edit', edit_okr_path(okr) %></td>
        <td><%= link_to 'Destroy', okr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Okr', new_okr_path %>
